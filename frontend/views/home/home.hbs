
<div class='home-container'>
    <div class='calender-games'>
        <div class="calender-header">
            <span>Schedule</span>
        </div>
        {{#each schedule}}
            <div class="match-time">
                <span>{{this.dateString}}</span>
            </div>
            <div class="teams" value="{{this.id}}">
                <div class="home">
                    {{this.teams.0.team.shortName}}
                </div>
                <div class="away">
                    {{this.teams.1.team.shortName}}
                </div>
            </div>
        {{/each}}
    </div>
    <div class="stats-container" id="player-avg-home">
        <div class="filter-container">
            <input type="text" id="filter0" placeholder="Filter By Name">
            <input type="text" id="filter1" placeholder="Filter By Club">
            <input type="text" id="filter2" placeholder="Filter By Position">
            <div class="dropdown">
                <button class="dropbtn">Change Stats Type</button>
                <div class="dropdown-content">
                    <button class="stats-item" value="1">Passes</button>
                    <button class="stats-item" value="2">Shots</button>
                    <button class="stats-item" value="3">Tackles</button>
                </div>
            </div>
        </div>
        <table id="filter" class="table">
            <thead>
                <tr>
                    <th>Player</th>
                    <th>Club</th>
                    <th>Position</th>   
                    <th id='stats-fouls' style="display: none;">AvgFouls</th>                
                    <th id='stats-placehld'>AvgShots</th>
                    <th id="stats-placehld1">AvgOnTarget</th>
                </tr>
            </thead>
            <tbody id="playerStatsAvg">
                {{#each shots}}
                    <tr>
                        <td id="player-clickable-row" value={{this.id}}>{{this.name}}</td>
                        <td>{{this.teamName}}</td>
                        <td>{{this.position}}</td>
                        <td data-std="{{this.stdDevShots}}">{{this.averageShotsPerGame}}</td>
                        <td data-std="{{this.stdDevShotsOnTarget}}">{{this.averageShotsOnTarget}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="cond-prob">
        
    </div>
    <div class="stats-player">
        <div class="player-name"></div>
        <div class="player-img">
            <img id="player-portrait" src="#" onerror="this.onerror=null;this.src='assets/Photo-Missing.png'";/>
        </div>
        <div class="player-info"></div>
        <div class="player-avg-shot">
            <canvas id="player-avg-shot"></canvas>
        </div>
        <div class="player-avg-pass">
            <canvas id="player-avg-pass"></canvas>
        </div>
        <div class="player-avg-tackle">
            <canvas id="player-avg-tackle"></canvas>
        </div>

        <div class="probability-calc">
            <div class="prob-header">Calc Implied Odds &#8805</div>

            <div class="prob-input">
                <input type="text" placeholder="Shots" class="prob-field" id="prob-shot">
            </div>
            <div class="prob-result__shots"></div>
    
        </div>

    </div>
</div>